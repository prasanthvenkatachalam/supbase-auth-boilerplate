# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_publishable_key

# Upstash Redis Configuration (Required for Rate Limiting)
# 1. Sign up at https://console.upstash.com/
# 2. Create a new Redis database
# 3. Copy the REST API credentials from the database details page
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token


# Cloudflare Turnstile Configuration
# Get these from: https://dash.cloudflare.com/
NEXT_PUBLIC_CLOUDFLARE_TURNSTILE_SITE_KEY="your_cloudflare_turnstile_site_key"
CLOUDFLARE_TURNSTILE_SECRET_KEY="your_cloudflare_turnstile_secret_key"

# Legacy/Alternative naming used in some parts of the app:
# NEXT_PUBLIC_CLOUDFLARE_TRUSTLINE_SITE_KEY_NON_INTERACTIVE="your_site_key"
# CLOUDFLARE_TRUST_LINE_SECRET_KEY_NON_INTERACTIVE="your_secret_key"

# Zepto Mail Configuration (Transactional Email)
# Get your API token and domain settings from Zoho Zepto Mail dashboard
ZEPTOMAIL_URL="api.zeptomail.in" # Use your region's API endpoint
ZEPTOMAIL_TOKEN="your_zeptomail_send_mail_token"
EMAIL_SENDER_ADDRESS="noreply@yourdomain.com" # Must be a verified sender in Zepto Mail
EMAIL_SENDER_NAME="Your App Name"
# EMAIL_RECIPIENT is optional for generic testing
EMAIL_RECIPIENT="admin@yourdomain.com"
